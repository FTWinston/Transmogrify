<UserControl x:Class="Transmogrify.Controls.ProjectMapping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Transmogrify.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="150">
    <Grid>
        <Polyline x:Name="line" Points="0,15 150,15" Stroke="Black" StrokeThickness="3" Stretch="Fill" />
        <Label x:Name="label" Height="18" Content="{Binding Path=Text}" Background="White"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" />
    </Grid>
</UserControl>
