<Window x:Class="Transmogrify.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Transmogrify"
        WindowStartupLocation="CenterOwner"
        Title="Transmogrify library resources"
        Height="350" Width="400"
>
    <DockPanel>
        <Frame Background="Beige" />
        
        <StackPanel DockPanel.Dock="Bottom" Height="50" FlowDirection="RightToLeft" Orientation="Horizontal">
            <Button Content="Save changes" IsDefault="True" Height="25" HorizontalAlignment="Right" x:Name="btnSave" VerticalAlignment="Top" />
            <Button Content="Cancel" Height="25" HorizontalAlignment="Right" Margin="0,30,0,0" x:Name="btnCancel" VerticalAlignment="Top" />
        </StackPanel>
    </DockPanel>
</Window>
