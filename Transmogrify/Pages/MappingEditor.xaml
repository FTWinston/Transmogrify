<Page x:Class="Transmogrify.Pages.MappingEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Transmogrify - Mapping"
    d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Ribbon DockPanel.Dock="Top">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Visibility="Collapsed"/>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Some tab">
                <RibbonGroup Header="Group 1">
                    <Button Content="Back to project" Click="ButtonBack_Click" />
                </RibbonGroup>
                <RibbonGroup Header="Group 2">
                    <Button Content="Something else" />
                    <Button Content="IDK" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>

        <Label Content="{Binding Path=Name}" />
    </DockPanel>
</Page>
